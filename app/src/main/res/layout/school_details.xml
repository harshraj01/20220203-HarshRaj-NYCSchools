<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" >


    <data>
        <import type="android.view.View"/>
        <variable
            name="schoolDetailsViewModel"
            type="com.example.a20220203_harshraj_nycschools.viewmodel.SchoolDetailsViewModel"/>
    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <ProgressBar
                android:id="@+id/progressView"
                android:visibility="visible"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:indeterminateTint="@color/black"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </ProgressBar>

            <TextView
                android:id="@+id/fullname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:lineSpacingExtra="4dp"
                android:text="@{schoolDetailsViewModel.schoolDetailsNameInfo}"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="20sp"
                tools:text="fullNameTest"
                />
            <TextView
                android:id="@+id/satTestTakers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:lineSpacingExtra="4dp"
                android:text="@{schoolDetailsViewModel.schoolDetailsSATScoreLiveData}"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="20sp"
                tools:text="jhfhjshfjhfje"

                />
        </LinearLayout>

    </LinearLayout>


</layout>